! Rofi color theme
rofi.font: 		        Fira Mono 10
rofi.color-enabled: 	true
rofi.hide-scrollbar:    true
rofi.bw:                1

! 			        bg		    bdclr       separatorcolor
rofi.color-window: 	background, foreground, foreground
!			        bg          fg          bcalt       hlbg        hlfg	
rofi.color-normal: 	background, white_d,    background, foreground, background
rofi.color-active: 	foreground, background, green_d,    black,      white
rofi.color-urgent: 	red,        black,      red_d,      black,      white


