;border-bottom-size = 7
;border-bottom-color = ${colors.transparent}

modules-left = date padding volume
modules-center = i3
modules-right = battery padding eth wifi padding redshift padding powermenu

padding-left = 2
padding-right = 2

spacing = 1

[module/i3]
fixed-center = true
override-redirect = true

type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true
strip-wsnumbers = true
pin-workspaces = false

ws-icon-default = ~

label-focused = *
